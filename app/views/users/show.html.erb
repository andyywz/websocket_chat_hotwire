<div class="max-w-sm w-full lg:max-w-full lg:flex">
  <div class="h-48 lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" 
    style="background-image: url(<%= user_gravatar_url %>)">
  </div>
  <div class="w-full border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2">
        <%= @user.username %>
      </div>
      <a href=<%= edit_user_path(@user) %> class="text-blue-600 hover:underline">Edit</a>
      <p class="text-gray-700 text-base">
        <%= @user.biography %>
      </p>
    </div>
  </div>
</div>
