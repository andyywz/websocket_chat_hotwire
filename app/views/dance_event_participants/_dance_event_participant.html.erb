<tr id="<%= dom_id dance_event_participant.user %>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700
  hover:bg-gray-50 dark:hover:bg-gray-600">
  <td class="w-4 p-4">
    <div class="flex items-center">
      <input id="checkbox-table-search-1" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 
        rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 
        dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
      <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
    </div>
  </td>
  <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
    <img class="w-10 h-10 rounded-full" src=<%= user_gravatar_url %> alt="Jese image">
    <div class="pl-3">
      <div class="text-base font-semibold"><%= dance_event_participant.user.username %></div>
      <div class="font-normal text-gray-500"><%= dance_event_participant.user.email %></div>
    </div>
  </th>
  <td class="px-6 py-4">
    ---
  </td>
  <td class="px-6 py-4">
    <%= dance_event_participant.status %>
  </td>
  <td class="px-6 py-4">
    <div class="flex items-center">
      <div class="h-2.5 w-2.5 rounded-full bg-green-500 mr-2"></div>
      <% if @dance_event.organizer == current_user %>
        <%= button_to "Unregister", dance_event_participant, method: :delete %>
      <% else%>
        ---
      <% end %>
    </div>
  </td>
</tr>
